{
  "name": "destrostudios",
  "version": "1.3.1",
  "description": "destrostudios cross-game launcher, offering the possibility to login, download, update and start games.",
  "author": "destrostudios",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ng build && npm run electron",
    "start:prod": "ng build --configuration production && npm run electron",
    "electron": "electron ./build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "dist": "ng build --configuration production && electron-builder build --publish never",
    "deploy": "ng build --configuration production && electron-builder build --publish always"
  },
  "build": {
    "directories": {
      "buildResources": "build",
      "app": "build"
    },
    "appId": "com.destrostudios.launcher",
    "artifactName": "destrostudios-setup.${ext}",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/destrostudios/launcher.git"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "dependencies": {
    "@angular/animations": "^15.2.10",
    "@angular/common": "^15.2.10",
    "@angular/compiler": "^15.2.10",
    "@angular/core": "^15.2.10",
    "@angular/forms": "^15.2.10",
    "@angular/platform-browser": "^15.2.10",
    "@angular/platform-browser-dynamic": "^15.2.10",
    "@angular/router": "^15.2.10",
    "@ngrx/effects": "^15.4.0",
    "@ngrx/entity": "^15.4.0",
    "@ngrx/store": "^15.4.0",
    "@ngrx/store-devtools": "^15.4.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.1",
    "font-awesome": "^4.7.0",
    "rxjs": "^7.5.5",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.10",
    "@angular/cli": "^15.2.10",
    "@angular/compiler-cli": "^15.2.10",
    "@angular/language-service": "^15.2.10",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "^4.0.3",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^17.0.30",
    "codelyzer": "^6.0.2",
    "electron-builder": "^23.0.3",
    "jasmine-core": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.3.19",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "protractor": "^7.0.0",
    "ssh2-sftp-client": "^8.0.0",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "~4.9.5"
  }
}
